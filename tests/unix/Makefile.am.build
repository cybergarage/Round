noinst_PROGRAMS = roundclienttest

AM_CPPFLAGS = -I\$(top_srcdir)/include -I\$(top_srcdir)/src -I../

HEADER

my @find_files = `find ../ -name *.h`;
my @include_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @include_files, $file;
}
print join(" \\\n", @include_files) . "\n";

print<<SOURCES;

roundclienttest_SOURCES = \\
SOURCES

my @find_files = `find ../ -name *.cpp -or -name *.c`;
my @source_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @source_files, $file;
}
print join(" \\\n", @source_files) . "\n";

print<<FOTTER;
#if HAVE_LIBTOOL
#roundclienttest_LDADD = \@CURL_LIBS\@ \@XML_LIBS\@ ../../lib/unix/libroundclient.la
#else
roundclienttest_LDADD = \@CURL_LIBS\@ \@XML_LIBS\@ ../../lib/unix/libroundclient.a
#endif
FOTTER

